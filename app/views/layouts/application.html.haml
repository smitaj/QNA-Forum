!!!
%html
  %head
    %title QnA Forum
    %p.notice= notice
    %p.alert= alert
    = auto_discovery_link_tag :atom, "/feed" 
    = auto_discovery_link_tag :rss, "/feed.rss"
    = stylesheet_link_tag 'home', 'jquery-cleditor', 'rating'
    = javascript_include_tag  'jquery172', 'jquery-cleditor', 'jquery_ujs', 'rating',  'all'
    = csrf_meta_tags
    :javascript
      $(document).ready(function(){
        $("#input").cleditor({
          width:500,
          height:250,
          controls: "bold italic underline strikethrough subscript superscript | font size " +  "style | color highlight removeformat | bullets numbering | outdent " + "indent | alignleft center alignright justify | undo redo | " + "rule image link unlink | cut copy paste pastetext | print source"
        });
      });
  %body
    - unless params[:controller] == "devise/sessions" or params[:controller] == "devise/registrations"
      #blueBar
        .loggedout_menubar_container
          #logout
            - if user_signed_in?
              = link_to "Logout", destroy_user_session_path,  :method => :delete
    = yield
    
